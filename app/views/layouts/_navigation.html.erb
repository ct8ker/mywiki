<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <strong><%= link_to "My Wiki", root_url, class: "navbar-brand" %></strong>
        </div>
        <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
                <li class="<%= params[:controller] == 'tags' ? 'active' : '' %>">
                    <%= link_to 'Tags', tags_url %>
                </li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li class="dropdown">
                <% if user_signed_in? %>
                    <a href="#" role="button" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.login_id %> <b class="caret"></b></a>
                    <ul class="dropdown-menu" role="menu" aria-labelledby="drop3">
                        <li role="presentation">
                            <%= link_to('Profile', edit_user_registration_url, role: 'menuitem', tabindex: '-1') %>
                        </li>
                        <li role="presentation">
                            <%= link_to('New article', new_article_url, role: 'menuitem', tabindex: '-1') %>
                        </li>
                        <li role="presentation" class="divider"></li>
                        <li role="presentation">
                            <%= link_to('Logout', destroy_user_session_url, role: 'menuitem', tabindex: '-1') %>
                        </li>
                    </ul>
                <% else %>
                    <a href="#" role="button" class="dropdown-toggle" data-toggle="dropdown">Guest <b class="caret"></b></a>
                    <ul class="dropdown-menu" role="menu" aria-labelledby="drop3">
                        <li role="presentation">
                            <%= link_to('Sign up', new_user_registration_url, role: 'menuitem', tabindex: '-1') %>
                        </li>
                        <li role="presentation" class="divider"></li>
                        <li role="presentation">
                            <%= link_to('Login', new_user_session_url, role: 'menuitem', tabindex: '-1') %>
                        </li>
                    </ul>
                <% end %>
                </li>
            </ul>
        </div>
    </div>
</div>